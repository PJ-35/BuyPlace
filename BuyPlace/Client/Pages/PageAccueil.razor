@page "/"



<PageTitle>Accueil</PageTitle>
<div class="masthead firstsiv shadow " style="  background-image:url(/header-bg.jpg); ">
    <div class="">
        <div class="intro-text" >
            <div class="intro-lead-in" ><span >Bienvenue à BuyPlace</span></div>
            <div class="intro-heading text-uppercase"><span id="wel">C&#39;est bien de vous rencontrer</span></div>
            <a class="btn btn-primary btn-xl text-uppercase" href="#categories">Catégorie</a>
        </div>
    </div>
</div>
<div id="carouselExampleControls" class="carousel shadow slide h-auto  " data-bs-ride="carousel" >
    <div class="carousel-inner text-white" >
        @if(categories is not null)
        {
            @for (int i = 0; i < categories.Count; i++)
            {
                string image = categories[i].nom + "2.jpg";
               
            
                @if (i == 0)
                {
                    <div class="carousel-item p-5 active align-items-center masthead" style=" background: linear-gradient(rgba(0, 0, 0, 0.60), rgba(0, 0, 0, 0.60)), url(../images_Accueil/@image);  background-size: cover; ">
                       
                        <div class="container ">
                            <div class="intro-text">

                                <div class="intro-heading text-uppercase">@categories[i].nom</div>
                                <a class="btn btn-primary btn-xl text-uppercase" role="button" href="/magasiner/@categories[i].Id">Acheter</a>
                            </div>

                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item p-5 pt-5 masthead" style="background: linear-gradient(rgba(0, 0, 0, 0.60), rgba(0, 0, 0, 0.60)), url(../images_Accueil/@image);  background-size: cover;">
                      
                        <div class="container">
                            <div class="intro-text">

                                <div class="intro-heading text-uppercase">@categories[i].nom</div>
                                <a class="btn btn-primary btn-xl text-uppercase" role="button" href="/magasiner/@categories[i].Id">Acheter</a>
                            </div>

                        </div>
                    </div>
                }

            }
        }


    </div>
    <button class="carousel-control-prev text-black" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Précedent</span>
    </button>
    <button class="carousel-control-next text-black" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Suivant</span>
    </button>
</div>



