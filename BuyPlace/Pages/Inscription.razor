                <span style="font-size:calc(1rem*.8); opacity:.8;">Ou</span>
                <span class="w-50 border border-1 "></span>
            </div>

            <EditForm Model="@user" OnValidSubmit="@RegisterUser" class="login-card-form align-content-center oi-account-login d-flex flex-column gap-1">



                <div class="form-item ">
                    <span class="form-item-icon material-symbols-rounded">person</span>
                    <InputText @bind-Value=user.UserName class="input" id="Courriel)" placeholder="Entrer un nom d'utilisateur" required />
                    <ValidationMessage For="@(() => user.UserName)" />

                </div>

                <div class="form-item ">
                    <span class="form-item-icon material-symbols-rounded">mail</span>
                    <InputText @bind-Value=user.Courriel type="email" class="input" id="Courriel)" placeholder="Entrer courriel" required />
                    <ValidationMessage For="@(() => user.Courriel)" />

                </div>

                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">lock</span>
                    <InputText @bind-Value=user.Mdp type="password" class="input" placeholder="Entrer le mot de passe" id="mdp" required />
                    <ValidationMessage For="@(() => user.Mdp)" />
                </div>

                <div class="form-item">
                    <span class="form-item-icon material-symbols-rounded">lock</span>
                    <InputText @bind-Value=cMdp class="input" id="cMdp" placeholder="Confirmer le mot de passe" required />
